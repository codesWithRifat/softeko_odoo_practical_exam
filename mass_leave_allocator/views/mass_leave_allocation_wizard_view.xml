<odoo>
    <record id="view_mass_leave_allocation_wizard_form" model="ir.ui.view">
        <field name="name">mass.leave.allocation.wizard.form</field>
        <field name="model">mass.leave.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Mass Leave Allocation">
                <group>
                    <field name="leave_type_id"/>
                    <field name="number_of_days"/>
                    <field name="allocation_mode"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="allocation_reason"/>
                </group>
                <footer>
                    <button string="Allocate" type="object" name="action_allocate" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mass_leave_allocation_wizard" model="ir.actions.act_window">
        <field name="name">Mass Leave Allocation</field>
        <field name="res_model">mass.leave.allocation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
