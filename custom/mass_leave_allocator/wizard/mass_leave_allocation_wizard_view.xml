<odoo>
    <record id="view_mass_leave_allocation_wizard" model="ir.ui.view">
        <field name="name">mass.leave.allocation.wizard.form</field>
        <field name="model">mass.leave.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Mass Leave Allocation Wizard">
                <group>
                    <field name="leave_type_id"/>
                    <field name="number_of_days"/>
                    <field name="allocation_mode"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="allocation_reason"/>
                </group>
                <footer>
                    <button string="Allocate" type="object" name="action_allocate" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_mass_leave_allocation"
                name="Bulk Leave Allocation"
                res_model="mass.leave.allocation.wizard"
                view_mode="form"
                target="new"/>
</odoo>
