<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record rule for employees to see only their own requests -->
        <record id="leave_request_employee_rule" model="ir.rule">
            <field name="name">Leave Request: Employee can see only own requests</field>
            <field name="model_id" ref="model_leave_request"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Record rule for managers to see their subordinates' requests -->
        <record id="leave_request_manager_rule" model="ir.rule">
            <field name="name">Leave Request: Manager can see subordinates' requests</field>
            <field name="model_id" ref="model_leave_request"/>
            <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>